<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_120sdp"
            android:padding="5dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/txt_discount"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="% Off"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_brandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toRightOf="@id/img_product"
            android:gravity="center"
            android:text="Ashiward"
            android:layout_marginLeft="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt_typeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_brandName"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/img_product"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="Ashiward aata"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:id="@+id/ll_quantityName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/txt_typeName"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/img_product"
            android:background="@drawable/background_corner"
            android:gravity="center"
            android:textAlignment="textStart"
            android:visibility="gone"
            tools:ignore="RtlCompat">

            <Spinner
                android:id="@+id/sp_quantityName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:minWidth="@dimen/_50sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_quantityName"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/img_product"
            android:gravity="center"
            android:text="10 kg"
            android:layout_marginLeft="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt_snappelPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_quantity"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/img_product"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:text="Rs 723743"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt_sellingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_snappelPrice"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/img_product"
            android:gravity="center"
            android:text="Rs 723743"
            android:layout_marginLeft="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/txt_quantity"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/button_corner"
            android:text="ADD"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_carditem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/txt_quantity"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_minus"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:background="@drawable/shapeforadd"
                android:gravity="center_horizontal"
                android:text="-"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_prno"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_plus"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:background="@drawable/shapeforadd"
                android:gravity="center_horizontal"
                android:text="+"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>